.row
	.col-md-12
		- if @recipe.user == current_user
			.btn-toolbar
				.btn-group
					= link_to "Edit", edit_recipe_path, class: "btn btn-default"
					= link_to "Delete", recipe_path, method: :delete, class: "btn btn-default"
				.btn-group
					= link_to "Back", root_url, class: "btn btn-default"
%br
.row.show-top
	.col-md-5
		= image_tag @recipe.image.url(:medium)
	.col-md-7
		.panel.panel-success
			.panel-heading
				%h5.title= @recipe.name
			.panel-body.description
				%p= @recipe.description

.row
	.col-md-6
		.panel.panel-success
			.panel-heading
				%h5 Ingredients
			.panel-body.ingredients
				- @recipe.ingredients.each do |ingredient|
					%li= ingredient.ingredient
	.col-md-6
		.panel.panel-success
			.panel-heading
				%h5 Directions
			.panel-body.directions
				- @recipe.directions.each do |direction|
					%li= direction.steps
		
		